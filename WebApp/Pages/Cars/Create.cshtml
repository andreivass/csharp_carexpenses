            </div>*@
            <div class="btn-group btn-group-lg btn-group-md btn-group-sm" role="group" aria-label="Basic example">
                <input type="submit" value="Create" class="btn btn-secondary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
            
        </form>
    </div>
</div>


